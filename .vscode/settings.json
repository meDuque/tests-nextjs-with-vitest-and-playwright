{
  /** workbench */
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.labelFormat": "short",
  /** editor */
  "editor.fontSize": 20,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 95,
  "editor.cursorWidth": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // "source.organizeImports": "always"
  },
  "editor.rulers": [
    95,
    120
  ],
  // Explorer
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, eslint.config*, prettier*, .prettier*, .editorconfig, tsconfig*, pnpm-*, bun.lockb, nest*, package-lock*, yarn*",
    "vitest.config.ts": "vite*",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "files.eol": "\n",
  /** Extentions */
  "[prisma]": {},
  "[typescript]": {},
  "[javascript]": {},
  "[tailwindcss]": {
    "tailwindCSS.experimental.classRegex": [
      [
        "clsx\\(([^)]*)\\)",
        "(?:'|\"|`)([^']*)(?:'|\"|`)"
      ]
    ]
  },
  "code-runner.executorMap": {
    "typescript": "npx dotenv -e .env.development -- tsx"
  },
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "custom": true, // Enable the `custom` dictionary
    "internal-terms": false // Disable the `internal-terms` dictionary
  },
  "createReactTSXComponent.fileExtension": "tsx",
  "createReactTSXComponent.stylesFormat": "CSS"
}